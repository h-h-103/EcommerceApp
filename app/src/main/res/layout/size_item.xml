<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_shadow"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@color/g_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_content"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:src="@color/g_icon_tint"
        app:layout_constraintStart_toStartOf="@+id/img_shadow"
        app:layout_constraintTop_toTopOf="@+id/img_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/img_shadow"
        app:layout_constraintEnd_toEndOf="@+id/img_shadow"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked"
        app:layout_constraintTop_toTopOf="@id/img_content"
        app:layout_constraintBottom_toBottomOf="@id/img_content"
        app:layout_constraintStart_toStartOf="@id/img_content"
        app:layout_constraintEnd_toEndOf="@id/img_content"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:textAlignment="center"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>